<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<% if user_signed_in? %>
  <ul>
    <li><%= link_to "Edit", edit_article_path(@article) %></li>
    <li><%= link_to "Destroy", article_path(@article), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %></li>
  </ul>
<% end %>
<br />
<hr />
<%= link_to '<- Main page', articles_path %>
<hr />
<br />
<% if user_signed_in? %>
<h2>Add comment:</h2>
  <%= render 'comments/form' %>
<br />
<hr />
<% end %>
<h2>Comments</h2>
<hr />
<%= render @article.comments %>